{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "allowJs": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "skipLibCheck": true,
    "paths": {
      "@repositories/*": [
        "./src/repositories/*"
      ],
      "@controllers/*": [
        "./src/controllers/*"
      ],
      "@interfaces/*": [
        "./src/interfaces/*"
      ],
      "@validators/*": [
        "./src/validators/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@configs/*": [
        "./src/configs/*"
      ],
      "@entities/*": [
        "./src/entities/*"
      ],
      "@core/*": [
        "./src/core/*"
      ],
    }
  },
  "include": ["src/**/*"]
}
